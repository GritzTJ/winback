<Window x:Class="WinBack.App.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WinBack.App.ViewModels"
        xmlns:conv="clr-namespace:WinBack.App.Converters"
        xmlns:ctrl="clr-namespace:WinBack.App.Controls"
        Title="WinBack â€” Sauvegardes automatiques"
        Width="680" Height="600"
        MinWidth="560" MinHeight="440"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MainWindowStyle}"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolVis"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InvBoolVis"/>
        <conv:NullToVisibilityConverter x:Key="NullVis"/>
        <conv:StatusToBrushConverter x:Key="StatusBrush"/>
        <conv:PercentToDoubleConverter x:Key="PercentDouble"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>   <!-- Barre de titre personnalisÃ©e -->
            <RowDefinition Height="*"/>    <!-- Contenu -->
            <RowDefinition Height="Auto"/> <!-- Barre de statut -->
        </Grid.RowDefinitions>

        <!-- â”€â”€ Barre de titre â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo + Titre -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ’¾" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="WinBack" Style="{StaticResource TextTitle}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" ctrl:StackPanelEx.Spacing="8">
                    <Button Content="Historique" Style="{StaticResource ButtonSecondary}"
                            Click="OpenHistory_Click"/>
                    <Button Content="âš™ ParamÃ¨tres" Style="{StaticResource ButtonIcon}"
                            Click="OpenSettings_Click" FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â”€â”€ Contenu principal â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" ctrl:StackPanelEx.Spacing="16">

                <!-- Loading spinner -->
                <StackPanel Visibility="{Binding IsBusy, Converter={StaticResource BoolVis}}"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">
                    <TextBlock Text="Chargementâ€¦" Style="{StaticResource TextBody}"
                               HorizontalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Ã‰tat vide : aucun profil configurÃ© -->
                <Border Visibility="{Binding HasProfiles, Converter={StaticResource InvBoolVis}}"
                        Style="{StaticResource Card}" Padding="40">
                    <StackPanel HorizontalAlignment="Center" ctrl:StackPanelEx.Spacing="12">
                        <TextBlock Text="ðŸ’¿" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Aucun disque configurÃ©"
                                   Style="{StaticResource TextSubtitle}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Branchez un disque externe et cliquez sur Â« Ajouter un disque Â»&#10;pour configurer votre premiÃ¨re sauvegarde automatique."
                                   Style="{StaticResource TextBody}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" TextAlignment="Center"/>
                        <Button Content="+ Ajouter un disque" Style="{StaticResource ButtonPrimary}"
                                HorizontalAlignment="Center" Click="AddProfile_Click"/>
                    </StackPanel>
                </Border>

                <!-- Section profils -->
                <StackPanel Visibility="{Binding HasProfiles, Converter={StaticResource BoolVis}}" ctrl:StackPanelEx.Spacing="12">
                    <Grid>
                        <TextBlock Text="Mes disques" Style="{StaticResource TextSubtitle}" VerticalAlignment="Center"/>
                        <Button Content="+ Ajouter" Style="{StaticResource ButtonSecondary}"
                                HorizontalAlignment="Right" Click="AddProfile_Click"/>
                    </Grid>

                    <!-- Liste des profils -->
                    <ItemsControl ItemsSource="{Binding Profiles}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:ProfileCardViewModel}">
                                <Border Style="{StaticResource Card}" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Ligne 1 : Nom + Actions -->
                                        <Grid Grid.Row="0">
                                            <StackPanel Orientation="Horizontal" ctrl:StackPanelEx.Spacing="10" VerticalAlignment="Center">
                                                <TextBlock Text="ðŸ’¾" FontSize="18" VerticalAlignment="Center"/>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" Style="{StaticResource TextSubtitle}"/>
                                                    <TextBlock Style="{StaticResource TextCaption}">
                                                        <Run Text="{Binding PairCount}"/>
                                                        <Run Text=" dossier(s)  â€¢  "/>
                                                        <Run Text="{Binding LastRunText}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Boutons d'action -->
                                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" ctrl:StackPanelEx.Spacing="6">
                                                <!-- Badge statut -->
                                                <Border CornerRadius="10" Padding="8,2" VerticalAlignment="Center"
                                                        Background="{Binding LastRunStatus, Converter={StaticResource StatusBrush}, ConverterParameter=background}"
                                                        Visibility="{Binding LastRunStatus, Converter={StaticResource NullVis}}">
                                                    <TextBlock Text="{Binding StatusIcon}" FontSize="12"
                                                               Foreground="{Binding LastRunStatus, Converter={StaticResource StatusBrush}}"/>
                                                </Border>

                                                <!-- Annuler (si en cours) -->
                                                <Button Content="Annuler" Style="{StaticResource ButtonDanger}"
                                                        Visibility="{Binding IsRunning, Converter={StaticResource BoolVis}}"
                                                        Command="{Binding CancelCommand}"/>

                                                <!-- Modifier -->
                                                <Button Content="Modifier" Style="{StaticResource ButtonIcon}"
                                                        Visibility="{Binding IsRunning, Converter={StaticResource InvBoolVis}}"
                                                        Tag="{Binding ProfileId}"
                                                        Click="EditProfile_Click"/>

                                                <!-- Supprimer -->
                                                <Button Content="ðŸ—‘" Style="{StaticResource ButtonIcon}"
                                                        Visibility="{Binding IsRunning, Converter={StaticResource InvBoolVis}}"
                                                        Tag="{Binding ProfileId}"
                                                        Click="DeleteProfile_Click"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Ligne 2 : Barre de progression (si en cours) -->
                                        <StackPanel Grid.Row="1" Margin="0,10,0,0"
                                                    Visibility="{Binding IsRunning, Converter={StaticResource BoolVis}}">
                                            <Grid Margin="0,0,0,4">
                                                <TextBlock Text="{Binding ProgressText}"
                                                           Style="{StaticResource TextCaption}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock HorizontalAlignment="Right"
                                                           Style="{StaticResource TextCaption}">
                                                    <Run Text="{Binding ProgressPercent}"/><Run Text="%"/>
                                                </TextBlock>
                                            </Grid>
                                            <ProgressBar Style="{StaticResource ProgressBarStyle}"
                                                         Value="{Binding ProgressPercent}"
                                                         Maximum="100"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Section historique rÃ©cent -->
                <StackPanel Visibility="{Binding HasProfiles, Converter={StaticResource BoolVis}}" ctrl:StackPanelEx.Spacing="8">
                    <Separator Style="{StaticResource SeparatorStyle}"/>
                    <TextBlock Text="Historique rÃ©cent" Style="{StaticResource TextSubtitle}"/>

                    <ItemsControl ItemsSource="{Binding RecentRuns}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                               Foreground="{Binding Status, Converter={StaticResource StatusBrush}}"
                                               FontWeight="Bold" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding ProfileName}"
                                               Style="{StaticResource TextBody}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding SummaryText}"
                                               Style="{StaticResource TextCaption}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                                    <TextBlock Grid.Column="3" Text="{Binding DateText}"
                                               Style="{StaticResource TextCaption}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- â”€â”€ Barre de statut â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceAltBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="16,6"
                Visibility="{Binding StatusMessage, Converter={StaticResource NullVis}}">
            <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource TextCaption}"/>
        </Border>
    </Grid>
</Window>
