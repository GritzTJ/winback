<Window x:Class="WinBack.App.Views.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WinBack.App.ViewModels"
        xmlns:conv="clr-namespace:WinBack.App.Converters"
        xmlns:models="clr-namespace:WinBack.Core.Models;assembly=WinBack.Core"
        Title="WinBack — Historique des sauvegardes"
        Width="860" Height="560"
        MinWidth="640" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MainWindowStyle}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolVis"/>
        <conv:NullToVisibilityConverter x:Key="NullVis"/>
        <conv:InverseNullToVisibilityConverter x:Key="InvNullVis"/>
        <conv:StatusToBrushConverter x:Key="StatusBrush"/>
        <conv:EntryActionToBrushConverter x:Key="ActionBrush"/>
        <conv:EntryActionToIconConverter x:Key="ActionIcon"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ── En-tête ───────────────────────────────────────────────────── -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <TextBlock Text="Historique des sauvegardes" Style="{StaticResource TextTitle}"
                       VerticalAlignment="Center" Margin="20,0"/>
        </Border>

        <!-- ── Layout principal ─────────────────────────────────────────── -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Colonne gauche : liste des runs -->
            <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource SurfaceAltBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <TextBlock Text="Exécutions récentes" Style="{StaticResource TextCaption}"
                                   FontWeight="SemiBold"/>
                    </Border>

                    <ListBox Grid.Row="1" ItemsSource="{Binding Runs}"
                             BorderThickness="0" Background="Transparent"
                             SelectedItem="{Binding SelectedRun}"
                             SelectionChanged="RunList_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="12,10"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:BackupRunDetailViewModel}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                               Foreground="{Binding Status, Converter={StaticResource StatusBrush}}"
                                               FontWeight="Bold" VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1" Margin="8,0">
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <TextBlock Text="{Binding ProfileName}"
                                                       Style="{StaticResource TextBody}" FontWeight="SemiBold"/>
                                            <Border CornerRadius="4" Padding="4,1"
                                                    Background="#FFEFC8"
                                                    Visibility="{Binding IsDryRun, Converter={StaticResource BoolVis}}">
                                                <TextBlock Text="simulation" FontSize="10"
                                                           Foreground="#8A6800"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding DateText}" Style="{StaticResource TextCaption}"/>
                                        <TextBlock Text="{Binding SummaryText}" Style="{StaticResource TextCaption}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding DurationText}" Style="{StaticResource TextCaption}"
                                                   HorizontalAlignment="Right"/>
                                        <TextBlock Text="{Binding SizeText}" Style="{StaticResource TextCaption}"
                                                   HorizontalAlignment="Right"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Colonne droite : détail du run sélectionné -->
            <Grid Grid.Column="1">
                <!-- État vide : aucune exécution sélectionnée -->
                <TextBlock Text="Sélectionnez une exécution pour voir les détails."
                           Style="{StaticResource TextBody}" Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding SelectedRun, Converter={StaticResource InvNullVis}}"/>

                <!-- Détail : affiché uniquement quand un run est sélectionné -->
                <Grid Visibility="{Binding SelectedRun, Converter={StaticResource NullVis}}"
                      Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Résumé -->
                    <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SelectedRun.SummaryText}"
                                           FontSize="11" TextAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text="Changements" Style="{StaticResource TextCaption}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SelectedRun.SizeText}"
                                           FontSize="14" FontWeight="SemiBold" TextAlignment="Center"/>
                                <TextBlock Text="Transféré" Style="{StaticResource TextCaption}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SelectedRun.DurationText}"
                                           FontSize="14" FontWeight="SemiBold" TextAlignment="Center"/>
                                <TextBlock Text="Durée" Style="{StaticResource TextCaption}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SelectedRun.StatusIcon}"
                                           FontSize="14" FontWeight="SemiBold" TextAlignment="Center"
                                           Foreground="{Binding SelectedRun.Status, Converter={StaticResource StatusBrush}}"/>
                                <TextBlock Text="Statut" Style="{StaticResource TextCaption}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Liste des fichiers -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding SelectedEntries}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              BorderThickness="1"
                              BorderBrush="{StaticResource BorderBrush}"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              RowBackground="Transparent"
                              AlternatingRowBackground="#F9F9F9"
                              FontSize="12">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Action" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type models:BackupRunEntry}">
                                        <TextBlock Text="{Binding Action, Converter={StaticResource ActionIcon}}"
                                                   Foreground="{Binding Action, Converter={StaticResource ActionBrush}}"
                                                   FontWeight="Bold" HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Fichier" Width="*"
                                               Binding="{Binding RelativePath}"/>
                            <DataGridTextColumn Header="Détail" Width="180"
                                               Binding="{Binding ErrorDetail}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
